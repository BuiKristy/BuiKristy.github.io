<%- include('header') %>

<form action="/" method="post">
    <div class="form__recipe">
        <div class="recipe--name">
            <label for="recipe-name">Recipe Name</label>
            <input type="text" name="recipe-name" id="recipe-name">
        </div>

        <div class="recipe--source">
            <label for="recipe-source">Source</label>
            <input type="text" name="recipe-source" id="recipe-source">
        </div>

        <div class="recipe--url">
            <label for="recipe-url">Source URL</label>
            <input type="text" name="recipe-url" id="recipe-url">
        </div>

        <div class="recipe--course">
            <label for="recipe-course">Course</label>
            <input type="text" name="recipe-course" id="recipe-course">
        </div>
    </div>
</form>

